<h1>BURGERS!</h1>

<h2>READY TO DEVOUR!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR</button>
        </form>

        {{burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="db">Burger Name:</label>
    <input type="text" id="db" name="burger_name">
  </div>

  <button type="submit">Add Da Burger!</button>
</form>
